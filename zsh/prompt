autoload -U promptinit
promptinit
prompt adam2

# Display current path in title bar
# http://www.faqs.org/faqs/unix-faq/shell/zsh/
chpwd() {
  [[ -t 1 ]] || return
  case $TERM in
    sun-cmd) print -Pn "\e]l%~\e\\"
      ;;
    *xterm*|rxvt|(dt|k|E)term) print -Pn "\e]2;%~\a"
      ;;
  esac
}
# Set the current directory on load
chpwd
