function alert() {
  local exitstatus="$?"
  local lastcmd=$(tail -n1 ~/.histfile | cut -d ";" -f 2)
  if [[ $exitstatus = "0" ]]; then
    /usr/bin/notify-send -i "terminal" "Success" "$lastcmd"
    /usr/bin/beep -l 100 -f 500 -r 1
  else
    /usr/bin/notify-send -i "error" "Error" "$lastcmd"
    /usr/bin/beep -l 100 -f 10 -r 1
  fi
}
