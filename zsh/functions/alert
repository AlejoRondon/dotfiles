function alert() {
  local exitstatus="$?"
  if [[ $exitstatus = "0" ]]; then
    /usr/bin/notify-send -i "terminal" "Success" "Last command exited successfully"
    /usr/bin/beep -l 10 -f 5000 -r 1
  else
    /usr/bin/notify-send -i "error" "Error" "Last script exited with status $exitstatus"
    /usr/bin/beep -l 100 -f 10 -r 1
  fi
}
