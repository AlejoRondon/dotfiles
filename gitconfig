[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	l  = log --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	diffw = diff --word-diff=color
[color]
	ui = auto
[diff]
	mnemonicprefix = true
	indentHeuristic = true
	compactionHeuristic = true
	tool = intellij
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = gvim -f
	pager = less -+$LESS -RSX
[push]
	default = simple
[pull]
	# pull will do a rebase instead of a merge
	rebase = true
[help]
	autocorrect = 1
[tag]
	sort = version:refname
[credential]
	helper = cache
[rerere]
	enabled = true
[commit]
	verbose = true
    #gpgsign = true
[submodule]
	fetchJobs = 4
[rebase]
	autostash = true
	autosquash = true
[status]
	showUntrackedFiles = all
[merge]
	# Show more context in conflict
	conflictstyle = diff3
	tool = intellij
[mergetool "intellij"]
	cmd = idea merge $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE") $(cd $(dirname "$BASE") && pwd)/$(basename "$BASE") $(cd $(dirname "$MERGED") && pwd)/$(basename "$MERGED")
	trustExitCode = true
[difftool "intellij"]
	cmd = idea diff $(cd $(dirname "$LOCAL") && pwd)/$(basename "$LOCAL") $(cd $(dirname "$REMOTE") && pwd)/$(basename "$REMOTE")
[fetch]
	prune = true
