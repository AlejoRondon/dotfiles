#!/bin/bash

set -euo pipefail

readonly OUTPUT_PRIMARY="LVDS-1"
readonly OUTPUT_EXTERNAL="HDMI-1"

if xrandr | grep -q "$OUTPUT_EXTERNAL connected (normal"; then
  xrandr --output "$OUTPUT_EXTERNAL" --left-of "$OUTPUT_PRIMARY" --auto
  notify-send --icon monitor "External output on" "Output '$OUTPUT_EXTERNAL' enabled"
else
  xrandr --output "$OUTPUT_EXTERNAL" --off
  notify-send --icon monitor "External output off" "Output '$OUTPUT_EXTERNAL' disabled"
fi
