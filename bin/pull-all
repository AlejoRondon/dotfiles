#!/bin/bash

set -eu -o pipefail

DIR="${1-$(pwd)}"

function pull {
  if [ -d .git ]; then
    if git config remote.origin.url > /dev/null; then
      echo "$(tput bold)Pulling in $d$(tput sgr0)"
      set +e
      git pull --rebase=preserve
      set -e
    fi
  fi
}

# Require to handle a potential empty $DIR
shopt -s nullglob

(
  cd "$DIR"
  for d in */ ; do
  (
    cd "$d"
    pull "$d"
  )
  done
)
